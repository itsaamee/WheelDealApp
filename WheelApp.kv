#:import utils kivy.utils

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ""
    canvas.before: 
        Color: 
            rgba: (.47, .43, .26, 1)
        RoundedRectangle: 
            size: self.size
            pos: self.pos
            radius: [58]

<PageSpinner@Spinner>:
    size_hint: None, None
    size: dp(85), dp(80)
    pos_hint: {'top': 1, 'right': 1}
    background_normal: 'page_spinner_overlay_pic.png'
    values: ['Custom', 'Pre-Built', 'Lessons', 'Cart']
    on_text: root.parent.switch_to_page(self.text)  

<HomePage>:
    orientation: 'vertical'
    canvas.before:
        Color: 
            rgba: (.80, .87, .82, 1)
        Rectangle: 
            pos: self.pos
            size: self.size

    PageSpinner:

    BoxLayout:
        orientation: 'vertical'
        padding: 5, 0
        Label: 
            text: "The WheelDeal"
            font_size: 80
            bold: True
            color: 'black'
            font_name: "Roboto"
            halign: 'center' 
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1] * 2

        Label: 
            text: "We Match You To Your Perfect Bike"
            font_size: 35
            color: 'black'
            font_name: "Roboto"
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1]

        Image:
            source: 'mountain_bike_pic.png' 
            size_hint: (1, None)
            allow_stretch: False  
            keep_ratio: True  
            height: self.parent.width * 0.7

        GridLayout:
            height: self.minimum_height
            cols: 3
            rows: 3
            padding: 10
            spacing: 10

            Label:
                text: '   Sign in or Create\n        an Account'
                font_size: 32
                color: 'black'
                font_name: 'Roboto'
                col: 0
                row: 0

            Label: 
                text: ""
                col: 1
                row: 0

            BoxLayout:
                orientation: "vertical"
                TextInput:
                    hint_text: "Username"
                    multiline: False
                    font_size: 24
                TextInput:
                    hint_text: "Password"
                    multiline: False
                    password: True
                    font_size: 24
                
            RoundedButton:
                text: "Register\n  Here!"
                col: 0
                row: 1
                on_press: root.go_to_register_page()

            Label:
                text:""
                col: 1
                row: 1

            RoundedButton:
                text: "Submit"
                col: 2
                row: 1
                on_press: root.go_to_welcome_page()
            
            Label: 
                text: "Talk to Us\n000-000-0000\ninfo@wheeldeal.com"
                color: "black"     

<RegisterPage>:
    canvas.before:
        Color: 
            rgba: (.80, .87, .82, 1)
        Rectangle: 
            pos: self.pos
            size: self.size

    PageSpinner:
        
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        
        Label:
            text: "Registration Page"
            font_size: 32

        RoundedButton:
            text: "Back"
            font_size: 25
            size_hint_y: None
            pos_hint: {'x': 0, 'top': 0.1}
            on_release: root.go_back()


<WelcomePage>:
    canvas.before:
        Color: 
            rgba: (.80, .87, .82, 1)
        Rectangle: 
            pos: self.pos
            size: self.size

    PageSpinner:

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Image:
            source: 'mountain_bike_pic.png' 
            size_hint: (1, None)
            allow_stretch: False  
            keep_ratio: True  
            height: self.parent.width * 0.7

        Label:
            text: "Where would you like to start?"
            color: "black"
            bold: True
            font_size: 48
            italic: True
            size_hint: (1, 0.2)
            pos_hint: {'x': 0, 'top': 0.9}
            

        BoxLayout: 
            orientation: "vertical"
            spacing: 8
        
            RoundedButton:
                text: "Custom Bikes"
                font_size: 38
                italic: True
                size_hint: (1, 0.3)
                pos_hint: {'x': 0, 'top': 0.6}
                on_press: root.go_to_custom_bikes()

            RoundedButton:
                text: "Pre-Built Bikes"
                font_size: 38
                italic: True
                size_hint: (1, 0.3)
                pos_hint: {'x': 0, 'top': 0.4}
                on_press: root.go_to_pre_built_bikes()

            RoundedButton:
                text: "Bike Lessons"
                font_size: 38   
                italic: True
                size_hint: (1, 0.3)
                pos_hint: {'x': 0, 'top': 0.2}
                on_press: root.go_to_bike_lessons()

